	<select id="getBoardComment_Movie" parameterType="_int" resultType="MovieDTO">
		SELECT	  m.MOVIE_TITLE
				, m.MOVIE_DATE  
		FROM BOARD b 
		INNER JOIN MOVIE m ON b.MOVIE_ID = m.MOVIE_ID
		WHERE BOARD_NUM = #{board_num}
	</select>
	
